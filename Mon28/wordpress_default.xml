<?xml version="1.0"?>
<!--
/*
 * This is the default layout for all WordPress content
 */
-->
<page layout="2columns-right" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="FishPig_WordPress::css/wordpress.css"/>
	</head>
  <body>
    <referenceBlock name="head.additional">
			<block class="FishPig\WordPress\Block\Html\HeadAdditional" name="wp.head.additional"/>
    </referenceBlock>
    <referenceContainer name="sidebar.main">
		<block class="FishPig\WordPress\Block\Sidebar" name="wp.sidebar" before="-">
			<action method="setWidgetArea">
				<argument name="widgetArea" xsi:type="string">sidebar-main</argument>
			</action>
		</block>
		<container name="facebook-like-box" htmlTag="div" htmlClass="block">
			<block class="Magento\Cms\Block\Block" name="facebook_like_box">
				<arguments>
					<argument name="block_id" xsi:type="string">facebook-like-box</argument>
				</arguments>
			</block>
		</container>
		<block name="alvis_twitter_new.latest" class="Alvis\Twitter\Block\Tweets" template="Alvis_Twitter::tweets.phtml" ifconfig="alvis_twitter/config/enabled">
            <arguments>
                <argument name="title" xsi:type="string">Twitter</argument>
                <argument name="type" xsi:type="string">latest</argument>
            </arguments>
        </block>
		<container name="faq-like-box" htmlTag="div" htmlClass="faq">
            <block class="Amasty\Faq\Block\Lists\QuestionsList" name="amasty_faq_questions" template="Amasty_Faq::lists/questions-wp.phtml" />
		</container>
    </referenceContainer>
    <referenceContainer name="before.body.end">
        <block class="FishPig\WordPress\Block\AdditionalCss" name="wp.additional_css"/>
    </referenceContainer>
  </body>
</page>